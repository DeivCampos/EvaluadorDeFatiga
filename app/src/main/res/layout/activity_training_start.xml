<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Resumen de los datos del usuario -->
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen del Usuario"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: -- \nEdad: --"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />


    <!-- Indicador del estado de conexión del Arduino -->
    <TextView
        android:id="@+id/tv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectando con Arduino..."
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="30dp" />

    <!-- Botón para iniciar el entrenamiento -->
    <Button
        android:id="@+id/btn_start_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Entrenamiento"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />
</LinearLayout>
